<!DOCTYPE html>
<html lang="en">
  <body class="detail">
    <head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>Drunk in the House</title>
      <link rel="stylesheet" href="/resources/css/detailProduct.css"> <!-- Asegúrate de que el nombre sea correcto -->
  </head>
    <header>
      <div class="container-header">
          <div>
              <h1>Drink in the House</h1>
          </div>
          <div class="container-listas">
              <ul class="box-listas">
                  <li class="listas" style="margin-bottom: 5px;"><a href="/api/register">REGISTRO DE USUARIOS</a></li >
                  <li class="listas"><a href="/api/login">INICIO DE SESIÓN</a></li>
              </ul>
          </div>
      </div>
  </header>

    <main class="product-detail__main">
      <div class="row">
        <div class="product-detail__main">
          <div class="product-detail__main-img">
            <div class="product-detail__main-img_box d-flex col-12 col-md-8">
              <div class="d-flex flex-column gap-1">
                <div class="product-detail__main-image-central">
                  <img
                    id="main-image"
                    src="<%= prodfind.image %>"
                    class="img-fluid rounded-top"
                    alt="Imagen del producto"
                    width="100%"
                    style="max-width: 50%"/>
                </div>
              </div>
            </div>
          </div>
          <div class="product-detail__main-info col-12 col-md-4 justify-content-center">
            <article class="product-detail-info">
              <div class="product-detail__main-card-body">
                <div>
                  <h2 class="product-detail__main-card-title">
                    <%= prodfind.nombre_producto %>
                  </h2>
                </div>
                <hr>
                <div>
                  <p class="product-detail__main-card-text">
                    <%= prodfind.promocion %>
                  </p>
                </div>
                <div class="product-detail__main-card-precio">
                    $ <%= prodfind.valor.toLocaleString('es-ES') %>
                </div>
              </div>
            </article>
            
            <div class="product-detail-botones">
              <div class="product-detail__main-añadir-bt">
                <a href="#" onclick="addItemToCart(1,'<%=prodfind.id%>')">
                  <button class="product-detail__main-button font-semibold rounded-md border">Añadir al carrito</button>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>

    </main>
    
      <hr>
      <h2>Productos relacionados</h2>
      <div class="card-product_related">
      <div class="card-container_detail" >
        <% relatedProducts.forEach(relatedProduct => { %>
          <div class="card_detail">
            <a href="/products/detail/<%= relatedProduct.id %>">
              <% if (relatedProduct.image) { %>
                <img src="<%= relatedProduct.image %>" alt="Imagen relacionada">
              <% } else { %>
                <p>No image available</p>
              <% } %>
            </a>
            <div class="card-content_detail">
              <p class="card-name">
                <%= relatedProduct.nombre_producto %>
              </p>
              <p class="price"><b>$<%= relatedProduct.valor.toLocaleString('es-ES') %>
              </b></p>
              <p class="card-descripcion">
                <%= relatedProduct.promocion %>
              </p>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
    
    <script src="/js/productDetail.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
      crossorigin="anonymous"
    ></script>

  </body>
</html>
